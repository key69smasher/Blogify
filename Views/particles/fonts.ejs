<style>
    *{
        margin: 0px;
        padding: 0px;
        box-sizing:border-box;
    }
    body {
        font-family: 'Inter', 'Karla', sans-serif;
        background-image: url("/back.jpg");
        background-size: cover; 
        background-repeat: no-repeat;
        background-attachment: fixed; 
        color: aliceblue;
    }
    .creator_Img{
        border-radius: 50%;
    }
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px); 
    }

    .card-title {
        font-weight: bold;
    }

    .card-text {
        color: #6c757d; /* Muted text color for the card body */
    }
    .like-btn , .like-bt {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        background-color: rgb(12, 11, 11);
        border: 2px solid white; /* White outline */
        color: white;
        cursor: pointer;
        transition: transform 0.2s ease, background-color 0.2s ease, color 0.2s ease;
    }

    .like-btn:hover, .like-bt:hover {
        background-color: white; /* White background on hover */
        color: #0d6efd; /* Primary color text on hover */
        transform: scale(1.1); /* Slight zoom effect */
    }

    .like-btn svg .like-bt svg{
        fill: white; /* Default heart color */
        transition: fill 0.2s ease;
    }

    .like-count , .like-count {
        font-size: 1rem;
        font-weight: bold;
        margin-left: 0.5rem; /* Space between heart and count */
        transition: color 0.2s ease;
    }
    .cover-image-container {
    position: relative;
    overflow: hidden;
    width: 100%; /* Ensure the container takes the full width of the card */
    height: 200px; /* Set a fixed height for the container */
    }

    .cover-image-container img {
        width: 100%; /* Make the image take the full width of the container */
        height: 100%; /* Make the image take the full height of the container */
        object-fit: cover; /* Ensure the image scales properly without distortion */
        transition: opacity 0.3s ease-in-out;
        display: block;
    }

    .cover-image-container .dustbin-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/image/dustbin.png') center center no-repeat;
        background-size: 50%; /* Adjust the size of the dustbin image */
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        cursor: pointer;
        z-index: 1;
    }

    .cover-image-container:hover img {
        opacity: 0.3;
    }

    .cover-image-container:hover .dustbin-overlay {
        opacity: 1;
    }
        
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-container h1 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #343a40;
    }

    .form-container label {
        font-weight: bold;
        color: #495057;
    }

    .form-container button {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
    }
    .form-container .form-text {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .blog-image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    /* Blog body styling */
    .blog-body {
        white-space: pre-wrap; /* Preserve line breaks */
        word-wrap: break-word; /* Prevent horizontal scrolling */
        overflow: hidden;
        max-height: 300px; /* Limit height for preview */
        text-overflow: ellipsis;
    }

    /* Read more button styling */
    .read-more-btn, .read-less-btn {
        display: block;
        margin: 10px auto;
        text-align: center;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .read-more-btn:hover, .read-less-btn:hover {
        background-color: #0056b3;
    }
</style>